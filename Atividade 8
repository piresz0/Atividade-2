        Scanner medidor = new Scanner(System.in);

        // Peti칞칚o para dar uma temperatura e armazenar na vari치vel "celsius"
        System.out.println("Digite uma temperatura em Celsius: ");
        celsius = medidor.nextDouble();

        // Verifica칞칚o da temperatura e categoriza칞칚o
        if (celsius >= 30) {
            System.out.println("Est치 muito quente 游봇");
